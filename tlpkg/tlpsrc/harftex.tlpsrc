binpattern f bin/${ARCH}/harftex
binpattern f bin/${ARCH}/harflatex
binpattern f bin/${ARCH}/harflatex-dev
execute AddFormat name=harftex engine=harftex options="luatex.ini" \
  patterns=language.def,language.dat.lua
execute AddFormat name=harflatex engine=harftex options="lualatex.ini" \
  patterns=language.dat,language.dat.lua
execute AddFormat name=harflatex-dev engine=harftex options="lualatex.ini" \
  patterns=language.dat,language.dat.lua
